<% @page_title = "حذف دفعة" %>
<div id="content-header">
  <div class='header-icon batches-icon'></div>
  <h1>الدفعات</h1>
  <div class='header-sep'>|</div>
  <div class='sub-header'>حذف الدفعة</div>
  <div id="inner-tab-menu">
    <ul>
      <li class='themed_bg themed-dark-hover-background'><%= link_to("<< العودة للجدول", batches_path) %></li>
    </ul>
  </div>
</div>
<div id="page-yield">
<div class="batches new">
  <%= form_for(@batch, :method => 'delete') do |f| %>
    <span>هل أنت متأكد من أنك  تريد حذف هذه الدفعة؟</span>
    <p><%= f.object.name %></p>
  <div><%= f.submit("حذف الدفعة", :class => 'submit_button') %></div>
  <% end %>
</div>
